<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" 			value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" 				value="jdbc:mysql://localhost:3306/java"/>
        <property name="username" 	value="servlet"/>
        <property name="password" 	value="1234"/>
      </dataSource>
    </environment>
  </environments>
<!-- 자바 코드 대신, 뭐리문을 작성해놓은 파일을 가리켜 매퍼라 하며, 매퍼의 위치는 아래의 mappers 태그의 자식 태그로 등록해야함. -->   
	<mappers>
    <mapper resource="com/ch/mybatisapp/mybatis/NewsMapper.xml"/>
    <mapper resource="com/ch/mybatisapp/mybatis/BoardMapper.xml"/>
    
    <!-- 여러가지가 올 수 있다.
    <mapper resource="org/mybatis/example/BlogMapper.xml"/>
    <mapper resource="org/mybatis/example/BlogMapper.xml"/> 
    -->
    
  </mappers> 

</configuration>