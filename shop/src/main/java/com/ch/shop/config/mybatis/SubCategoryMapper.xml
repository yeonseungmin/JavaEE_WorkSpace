<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SubCategory">

<select id="selectByTopCategoryId" resultType="SubCategory" parameterType="int">
	select subcategory_id, subname
	from subcategory
	 where topcategory_id=#{topcategory_id}
</select>
<!-- pk 값으로 레코드 한건 가져오기 -->
<select id="select" parameterType="int" resultType="SubCategory">
	select * from subcategory where subcategory_id=#{subcategory_id}
</select>

</mapper>