<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TopCategory">


<resultMap type="TopCategory" id="subCategoryMap">
		<id column="topcategory_id" property="topcategory_id"/>
		<result column="topname" property="topname"/>
		
		<!-- 자식을 수집해서 subList 멤버 변수에 채우기 
			 	mybatis 에서는 부모가 다수의 자식을 수집하는 기능을 collection 이라고 한다.
		-->
		<collection 
		column="topcategory_id" 
		select="SubCategory.selectByTopCategoryId"
		property="subList"
		javaType="java.util.List"
		ofType="SubCategory"
		/>
</resultMap>
<!-- 현재로써는 아래의 쿼리에 의해 pk 값과 topname만을 채울수 있으므로
		하나의 상위 카테고리에 소속된 자식인 하위 카테고리 목록을 마이바티스가 
		자동으로 매핑을 해주지 못하는 상황이다.
		이떄는 개발자가 직접 원하는 매핑을 시도해야 함으로,
		resultMap을 이용하자
 -->
 
 
<!-- 쇼핑몰의 모든 상위 카테고리 가져오기 -->
<select id="selectAll" resultMap="subCategoryMap">
	select topcategory_id,topname from topcategory
</select>









</mapper>